{
  "version": "0.1",
  "defaults": {
    "cwd": ".",
    "stdout": "logs/${asset}.out",
    "stderr": "logs/${asset}.err",
    "env": {
      "prepend": {
        "lib_path": [
          "/usr/local/hakoniwa/lib"
        ],
        "PATH": ["/usr/local/hakoniwa/bin"] 
      }
    },    
    "start_grace_sec": 1,
    "delay_sec": 3
  },
  "assets": [
    {
      "name": "drone",
      "activation_timing": "before_start",
      "command": "linux-main_hako_aircraft_service_px4",
      "args": [
        "127.0.0.1",
        "4560",
        "config/drone/mujoco-px4-2",
        "config/pdudef/webavatar-2.json"
      ],
      "cwd": "${HAKO_DRONE_PROJECT_PATH}",
      "delay_sec": 5
    },
    {
      "name": "webserver",
      "activation_timing": "after_start",
      "command": "${PYTHON_PATH}",
      "args": ["-m","server.main","--asset_name","WebServer",
               "--config_path","${HAKO_DRONE_PROJECT_PATH}/config/pdudef/webavatar-2.json",
               "--delta_time_usec","20000"],
      "cwd": "${HAKO_WEBSERVER_PATH}",
      "depends_on": ["drone"]
    },
    {
      "name": "environment",
      "activation_timing": "before_start",
      "command": "${PYTHON_PATH}",
      "args": [
        "-m",
        "hakoniwa_envsim.envasset",
        "${HAKO_DRONE_PROJECT_PATH}/config/pdudef/webavatar-2.json",
        "20", 
        "../examples/datasets/simple_room"
      ],
      "cwd": "${HAKO_ENVSIM_PATH}/src",
      "depends_on": ["drone"]
    },
    {
      "name": "pymavlink_test-1",
      "activation_timing": "after_start",
      "command": "${PYTHON_PATH}",
      "args": [
            "-m", "env_test",
            "--name","Drone",
            "--connect", "udp:127.0.0.1:14540",
            "--type","px4",
            "--config-path","../../config/pdudef/webavatar-2.json",
            "--mission-file", "mission.json"
      ],
      "cwd": "${HAKO_DRONE_PROJECT_PATH}/drone_api/pymavlink",
      "env": {
        "prepend": {
          "PYTHONPATH": [
            "${HAKO_DRONE_PROJECT_PATH}/drone_api/pymavlink"
          ]
        }
      },
      "depends_on": ["webserver"]
    }, 
    {
      "name": "pymavlink_test-2",
      "activation_timing": "after_start",
      "command": "${PYTHON_PATH}",
      "args": [
            "-m", "env_test",
            "--name","Drone1",
            "--connect", "udp:127.0.0.1:14541",
            "--type","px4",
            "--config-path","../../config/pdudef/webavatar-2.json",
            "--mission-file", "mission2.json"
      ],
      "cwd": "${HAKO_DRONE_PROJECT_PATH}/drone_api/pymavlink",
      "env": {
        "prepend": {
          "PYTHONPATH": [
            "${HAKO_DRONE_PROJECT_PATH}/drone_api/pymavlink"
          ]
        }
      },
      "depends_on": ["pymavlink_test-1"]
    }
    
  ],
  "notify": {
    "type": "exec",
    "command": "scripts/notify_on_fail.sh",
    "args": ["${asset}", "asset_exit", "${timestamp}"]
  }
}
